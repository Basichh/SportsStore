                <input id="navBarSearchForm" class="form-control mr-sm-2" type="search" placeholder="Search for products here.." aria-label="Search" style="width:500px">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit" style="background-color: #ffc220; color: black">Search</button>
            </form>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Account/Create">Create an account<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/Account/Login">Login<span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <div class="float-right">
                @await Component.InvokeAsync("CartSummary")
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div class="col col-md-9">
                @RenderBody()
            </div>
        </div>

    </div>
    <footer>
        <p>&copy; 2021 - Walmart</p>
    </footer>

