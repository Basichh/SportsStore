        @*<----------- Light blue walmart hex*@
        <a class="navbar-brand" asp-page="/Index">Walmart</a>
        <a class="navbar-brand" asp-page="/Index"> <img src="~/images/logo-sun-blue-bg.png" alt="logo" class="image" style="max-height:50px; max-width:50px"></a>
        @*<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>*@

        <div class="navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/Product/List"> Products <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        More
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" asp-page="/About">About</a>
                        <a class="dropdown-item" asp-page="/FAQ">FAQ</a>
                        <div class="dropdown-divider"></div>
